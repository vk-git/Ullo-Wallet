<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ullo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".App"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.landing.LandingActivity" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".ui.register.RegisterActivity"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".ui.confirm_account.ConfirmAccountActivity"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".ui.main.MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".ui.contact.ContactActivity"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".ui.facility.FacilityActivity"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".ui.edit_patient.EditPatientActivity"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".ui.create_patient.CreatePatientActivity"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".ui.imprint.ImprintActivity"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".ui.delete_account.DeleteAccountActivity"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".ui.privacy_policy.PrivacyPolicyActivity"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".ui.terms_of_use.TermsOfUseActivity"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".ui.tutorial_video.TutorialVideoActivity"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".ui.change_password.ChangePasswordActivity"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".ui.choose_patient.ChoosePatientActivity"
            android:theme="@style/AppTheme.White" />
        <activity
            android:name=".ui.start_analysis.StartAnalysisActivity"
            android:theme="@style/AppTheme.White" />
    </application>
</manifest>